# Database connection
DATABASE_URL=mysql+pymysql://ctfd:ctfd@db/ctfd

# Redis connection
REDIS_URL=redis://cache:6379

# File upload path (inside container)
UPLOAD_FOLDER=/var/uploads

# Log file path (inside container)
LOG_FOLDER=/var/log/CTFd

# Logging options
ACCESS_LOG=-
ERROR_LOG=-

# Security key (CHANGE THIS in production)
SECRET_KEY=changeme

# Number of worker processes
WORKERS=1

# Enable if you're behind a reverse proxy like nginx
REVERSE_PROXY=true
